---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
---

<Layout title="Home">
	<div class="px-5 pt-44 lg:pt-72">
		<h1 class="font-heading text-4xl md:text-5xl leading-tight">
			<span
				class="font-bold text-transparent bg-clip-text bg-gradient-to-r from-primary to-accent"
			>
				Hydrogen
			</span>
			<br class="sm:hidden" />
			for Future
		</h1>
		<p class="py-6 font-body">
			Zur Rettung des Klimas benötigen wir Grünen Wasserstoff.
		</p>

		<div class="m-auto flex justify-between md:justify-start">
			<Button content="Kampagne" py="3" px="4" color="secondary"/>
			<Button content="Grüner Wasserstoff" py="3" px="4" color="primary"/>
		</div>
	</div>
</Layout>
